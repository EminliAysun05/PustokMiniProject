@using Pustokk.BLL.ViewModels.ProductViewModels
@model ProductDetailsViewModel

<main class="inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row mb--60">
            <div class="col-lg-5">
                <div class="product-details-slider">
                    @foreach (var imageUrl in Model.ImageUrls)
                    {
                        <div class="single-slide">
                            <img src="@imageUrl" alt="@Model.Name">
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-7">
                <div class="product-details-info">
                    <h3 class="product-title">@Model.Name</h3>
                    <ul>
                        <li>Brand: <span>@Model.Brand</span></li>
                        <li>Product Code: <span>@Model.ProductCode</span></li>
                        <li>Reward Points: <span>@Model.RewardPoints</span></li>
                        <li>Availability: <span>@(Model.Availability ? "In Stock" : "Out of Stock")</span></li>
                    </ul>
                    <div class="price-block">
                        <span class="price-new">@Model.Price.ToString("C")</span>
                        @if (Model.DisCountPrice.HasValue)
                        {
                            <del class="price-old">@Model.DisCountPrice.Value.ToString("C")</del>
                        }
                    </div>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>

        <section class="related-products">
            <h2>Related Products</h2>
            <div class="product-slider">
              @*   @foreach (var product in Model.RelatedProducts)
                {
                    <div class="single-slide">
                        <h3>@product.Name</h3>
                        <img src="@product.ImageUrl" alt="@product.Name">
                        <span>@product.Price.ToString("C")</span>
                    </di *@v>
                }
            </div>
        </section>
    </div>
</main>

