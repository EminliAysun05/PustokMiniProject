                            <option value="@tag.Id">@tag.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Şəkillər</label>
                    <input asp-for="NewImageFiles" type="file" class="form-control" multiple />
                    <span asp-validation-for="NewImageFiles" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input asp-for="RemoveOldImages" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="RemoveOldImages">Köhnə şəkilləri sil</label>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Yenilə</button>
                <a asp-action="Index" class="btn btn-secondary mt-3">İmtina et</a>
