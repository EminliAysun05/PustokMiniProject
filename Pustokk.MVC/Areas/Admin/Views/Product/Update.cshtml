@using Pustokk.BLL.ViewModels.ProductViewModels
@model ProductUpdateViewModel

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Məhsulu Yenilə</h4>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label>Məhsul Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Məhsulun adını daxil edin" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Təsvir</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Məhsul təsvirini daxil edin"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Qiymət</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Endirimli Qiymət</label>
                    <input asp-for="DisCountPrice" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="DisCountPrice" class="text-danger"></span>
                </div>

