                <div class="form-group">
                    <label for="TagIds">Taglar</label>
                    <select id="TagIds" asp-for="CategoryId" class="form-control">
                        <option value="@null" selected>Taglari sec</option>
                        @foreach (var tag in Model.Tags ?? new())
