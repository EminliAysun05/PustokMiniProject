@using Pustokk.BLL.ViewModels.ServiceViewModels
@model ServiceUpdateViewModel

<h2>Xidməti Yenilə</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Başlıq</label>
        <input asp-for="Title" class="form-control" placeholder="Başlıq daxil edin" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Açıqlama</label>
        <textarea asp-for="Description" class="form-control" placeholder="Açıqlama daxil edin"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mövcud Simge</label>
        @if (!string.IsNullOrEmpty(Model.ExistingIconUrl))
        {
            <img src="@Model.ExistingIconUrl" alt="Simge" width="50" />
        }
        else
        {
            <span>Simge yoxdur</span>
        }
    </div>

    <div class="form-group">
        <label>Yeni Simge Faylı</label>
        <input asp-for="NewIconFile" type="file" class="form-control" />
        <span asp-validation-for="NewIconFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Yenilə</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
