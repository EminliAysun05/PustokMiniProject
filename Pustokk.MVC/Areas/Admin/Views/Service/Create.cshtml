@using Pustokk.BLL.ViewModels.ServiceViewModels
@model ServiceCreateViewModel

<h2>Yeni Xidmət Əlavə Et</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Başlıq</label>
        <input asp-for="Title" class="form-control" placeholder="Başlıq daxil edin" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Açıqlama</label>
        <textarea asp-for="Description" class="form-control" placeholder="Açıqlama daxil edin"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Simge Faylı</label>
        <input asp-for="IconFile" type="file" class="form-control" />
        <span asp-validation-for="IconFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Yarat</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
