@using Pustokk.BLL.ViewModels.SetttingViewModels
@model IEnumerable<SettingViewModel>

<h1>Settings</h1>
<a asp-action="Create" class="btn btn-primary">Create New Setting</a>
<table class="table">
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
