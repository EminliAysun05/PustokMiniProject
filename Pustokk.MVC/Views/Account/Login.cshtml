@using Pustokk.BLL.ViewModels.AppUserViewModels
@model LoginViewModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <form class="p-4 border rounded shadow" method="post" style="width: 100%; max-width: 400px;">
        <div class="login-form">
            <h4 class="login-title text-center mb-3">Returning Customer</h4>
            <p class="text-center"><span class="font-weight-bold">I am a returning customer</span></p>
            <div class="form-group">
                <label asp-for="EmailOrUserName">Enter your email or username here...</label>
                <input asp-for="EmailOrUserName" class="form-control" placeholder="Enter your email or username here...">
                <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="SaveMe" class="form-check-input" type="checkbox">
                <label asp-for="SaveMe" class="form-check-label">Remember me</label>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-outlined w-100">Login</button>
            </div>
        </div>
    </form>
</div>
