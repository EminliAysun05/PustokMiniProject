@using Pustokk.BLL.ViewModels.CategoryViewModels
@model List<CategoryViewModel>
<div class="header-bottom pb--10">

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3">
                <nav class="category-nav">
                    <div>
                        <a href="javascript:void(0)" class="category-trigger">
                            <i class="fa fa-bars"></i>Browse Categories
                        </a>
                        <ul class="category-menu">
                            @foreach (var category in Model)
                            {
                                <li class="cat-item @(category.SubCategories != null && category.SubCategories.Any() ? "has-children" : "")">
                                    <a href="#">@category.Name</a>
                                    @if (category.SubCategories != null && category.SubCategories.Any())
                                    {
                                        <ul class="sub-menu">
                                            @foreach (var subCategory in category.SubCategories)
                                            {
                                                <li>
                                                    <a href="#">@subCategory.Name</a>
                                                </li>
                                            }
                                        </ul>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </nav>
            </div>

            <!-- Search bar -->
            <div class="col-lg-5">
                <div class="header-search-block">
                    <input type="text" placeholder="Search entire store here" class="form-control">
                    <button class="btn btn-primary">Search</button>
                </div>
            </div>

            <!-- User and cart section -->
            <div class="col-lg-4">
                <div class="main-navigation flex-lg-right">
                    <div class="cart-widget">
                        <!-- Login and Register -->
                        <div class="login-block">
                            <a asp-controller="account" asp-action="login" class="font-weight-bold">Login</a> <br>
                        </div>
                        <div class="login-block">
                            <a asp-controller="account" asp-action="register" class="font-weight-bold">Register</a> <br>
                        </div>
                        <!-- Cart -->
                        <div class="cart-block">
                            <div class="cart-total">
                                <span class="text-number">1</span>
                                <span class="text-item">Shopping Cart</span>
                                <span class="price">£0.00 <i class="fas fa-chevron-down"></i></span>
                            </div>
                            <div class="cart-dropdown-block">
                                <div class="single-cart-block">
                                    <div class="cart-product">
                                        <a href="product-details.html" class="image">
                                            <img src="image/products/cart-product-1.jpg" alt="">
                                        </a>
                                        <div class="content">
                                            <h3 class="title">
                                                <a href="product-details.html">Kodak PIXPRO Astro Zoom AZ421 16 MP</a>
                                            </h3>
                                            <p class="price"><span class="qty">1 ×</span> £87.34</p>
                                            <button class="cross-btn"><i class="fas fa-times"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="single-cart-block">
                                    <div class="btn-block">
                                        <a href="cart.html" class="btn">View Cart <i class="fas fa-chevron-right"></i></a>
                                        <a href="checkout.html" class="btn btn--primary">Check Out <i class="fas fa-chevron-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </div>
</div>




